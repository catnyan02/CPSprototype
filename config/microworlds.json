{
  "semesterManager": {
    "id": "semesterManager",
    "name": "Semester Manager",
    "inputs": [
      { "id": "studyHours", "label": "Study Hours", "min": 0, "max": 5, "initial": 0 },
      { "id": "groupWork", "label": "Group Work", "min": 0, "max": 5, "initial": 0 },
      { "id": "rest", "label": "Rest", "min": 0, "max": 5, "initial": 0 }
    ],
    "outputs": [
      { "id": "coursePerformance", "label": "Course Performance", "initial": 10 },
      { "id": "projectProgress", "label": "Project Progress", "initial": 15 },
      { "id": "stress", "label": "Stress", "initial": 20 }
    ],
    "effectMatrixB": [
      [3, 0, 0],
      [0, 2, 0],
      [2, 2, -3]
    ],
    "targets": { "coursePerformance": 80, "projectProgress": 65, "stress": 55 },
    "targetComparison": { "coursePerformance": ">=", "projectProgress": ">=", "stress": "<=" },
    "phaseDurations": { "exploreMs": 180000, "controlMs": 180000 },
    "mcq": {
      "item5": {
        "question": "Which single slider most effectively lowers Stress quickly?",
        "options": [
          "A. Increase Study Hours",
          "B. Increase Group Work",
          "C. Increase Rest",
          "D. Decrease Rest"
        ],
        "correct": "C"
      },
      "item6": {
        "question": "Which input directly drives up Project Progress when you need more progress?",
        "options": [
          "A. Study Hours",
          "B. Group Work",
          "C. Rest",
          "D. None of them affect Project Progress"
        ],
        "correct": "B"
      }
    }
  },
  "presentationPrep": {
    "id": "presentationPrep",
    "name": "Presentation Prep",
    "inputs": [
      { "id": "rehearsalTime", "label": "Rehearsal Time", "min": 0, "max": 5, "initial": 0 },
      { "id": "slidePolish", "label": "Slide Polish Effort", "min": 0, "max": 5, "initial": 0 },
      { "id": "sleepBreaks", "label": "Sleep / Breaks", "min": 0, "max": 5, "initial": 0 }
    ],
    "outputs": [
      { "id": "presentationQuality", "label": "Presentation Quality", "initial": 0 },
      { "id": "confidence", "label": "Confidence", "initial": 20 },
      { "id": "stress", "label": "Stress", "initial": 50 }
    ],
    "effectMatrixB": [
      [0, 3, 0],
      [3, 0, -1],
      [2, 1, -3]
    ],
    "targets": { "presentationQuality": 75, "confidence": 75, "stress": 55 },
    "targetComparison": { "presentationQuality": ">=", "confidence": ">=", "stress": "<=" },
    "phaseDurations": { "exploreMs": 180000, "controlMs": 180000 },
    "mcq": {
      "item5": {
        "question": "Which slider directly boosts Presentation Quality the most?",
        "options": [
          "A. Rehearsal Time",
          "B. Slide Polish Effort",
          "C. Sleep / Breaks",
          "D. None of them"
        ],
        "correct": "B"
      },
      "item6": {
        "question": "Stress is too high. What adjustment best brings Stress down with minimal hit to Confidence?",
        "options": [
          "A. Increase Rehearsal Time",
          "B. Increase Slide Polish Effort",
          "C. Increase Sleep / Breaks",
          "D. Decrease Sleep / Breaks"
        ],
        "correct": "C"
      }
    }
  },
  "tutoringSideGig": {
    "id": "tutoringSideGig",
    "name": "Tutoring Side-Gig",
    "inputs": [
      { "id": "tutoringSessions", "label": "Tutoring Sessions", "min": 0, "max": 5, "initial": 0 },
      { "id": "prepTime", "label": "Session Prep Time", "min": 0, "max": 5, "initial": 0 },
      { "id": "personalStudy", "label": "Personal Study Time", "min": 0, "max": 5, "initial": 0 }
    ],
    "outputs": [
      { "id": "earnings", "label": "Earnings", "initial": 0 },
      { "id": "teachingProficiency", "label": "Teaching Proficiency", "initial": 30 },
      { "id": "examReadiness", "label": "Exam Readiness", "initial": 0 }
    ],
    "effectMatrixB": [
      [3, 2, 0],
      [2, 0, 0],
      [-2, 1, 3]
    ],
    "targets": { "earnings": 85, "teachingProficiency": 60, "examReadiness": 80 },
    "targetComparison": { "earnings": ">=", "teachingProficiency": ">=", "examReadiness": ">=" },
    "phaseDurations": { "exploreMs": 180000, "controlMs": 180000 },
    "mcq": {
      "item5": {
        "question": "Which input grows Earnings fastest per point of adjustment?",
        "options": [
          "A. Increase Tutoring Sessions",
          "B. Increase Session Prep Time",
          "C. Increase Personal Study Time",
          "D. Decrease Tutoring Sessions"
        ],
        "correct": "A"
      },
      "item6": {
        "question": "Exam Readiness is falling behind while Earnings look fine. What should you raise first?",
        "options": [
          "A. Increase Tutoring Sessions further",
          "B. Increase Session Prep Time",
          "C. Increase Personal Study Time",
          "D. Reduce Session Prep Time"
        ],
        "correct": "C"
      }
    }
  }
}

